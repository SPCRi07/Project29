<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project29" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textlabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/acc</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/acc</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/acc</item>
    </style>


    <style name="appnametext" parent="Widget.MaterialComponents.TextView">

        <item name="android:fontFamily">@font/damion</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="normaltext" parent="Widget.MaterialComponents.TextView">

        <item name="android:fontFamily">@font/adamina</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardtext" parent="Widget.MaterialComponents.TextView">

        <item name="android:fontFamily">@font/hind_vadodara</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="inputlayout" parent="Widget.Design.TextInputLayout">

        <item name="paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxStrokeColor">@color/softgreen</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>

        <item name="hintTextColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="inputedittext" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="fontFamily">@font/adamina</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
